<div class="container">
  <h1><%= @task.title %></h1>
  <p><%= @task.details %></p>
  <% if @task.completed %>
    <p>This task is completed</p>
  <% else %>
    <p>This task is not completed yet</p>
  <% end %>
  <p><%= link_to "Back to list", root_path %></p>
  <p><%= link_to "Edit this task", edit_task_path %></p>
</div>
