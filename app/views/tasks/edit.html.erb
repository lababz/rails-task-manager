<div class="container">
  <h1>📝 Edit task</h1>
  <%= form_with model: @task do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title %>
    <%= f.label :details %>
    <%= f.text_field :details %>
    <%= f.label :completed, "Completed" %>
    <%= f.check_box :completed %>
    <%= f.submit "Update task" %>
  <% end %>
  <p><%= link_to "Back to list", root_path %></p>
</div>
